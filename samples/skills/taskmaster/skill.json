{
  "skill_name": "taskmaster",
  "initial_state": "cleanup",
  "states": {
    "cleanup": {
      "type": "tool",
      "command": "rm -rf docs/prd.md && mkdir -p docs",
      "next": "picker",
      "on_fail_prompt": "Failed to clean up the in-progress folder. Please check that I have permission to delete and create files in the docs/in-progress directory."
    },
    "picker": {
      "type": "action_loop",
      "session_role": "setup_assistant",
      "model_tier": "medium",
      "approval_mode": "yolo",
      "instruction": "@prd-picker.md",
      "verify_cmd": "test -f docs/prd.md",
      "on_fail_prompt": "This project is missing the required PRD document (docs/prd.md). Please create it so I can break down the tasks.",
      "next": "analyze_prd"
    },
    "analyze_prd": {
      "type": "action_loop",
      "session_role": "taskmaster",
      "model_tier": "high",
      "approval_mode": "yolo",
      "instruction": "@prompt.md",
      "verify_cmd": "tenazas work status",
      "next": "done"
    },
    "done": { "type": "end" }
  }
}
